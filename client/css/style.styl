// color swatches:
white-pure = #fff
white = #fafafa
white-shade = #efefef
grey-light = #dfdfdf
grey-med = #bebebe
grey = #555
grey-dark = #262626
black = #000

// default items
input, textarea
  outline none
  border none !important
  box-shadow none !important
  border 1px solid white-shade !important

// elements
.main
  background white-shade
.item-box
  width 60%
  padding 15px
  background white

// style classes
.center
  float none
  margin-left auto
  margin-right auto
.spacer-100
  height 100px
.spacer-50
  height 50px
.spacer-25
  height 25px
.box-shadow-light
  box-shadow 0 2px 2px grey-med

.margin-5
  margin 5px    


// color classes

.bg-black
  background black

.bg-white
  background white
.bg-white-pure
  background white-pure
.bg-white-shade
  background white-shade
.bg-grey-light
  background grey-light
.bg-grey
  background grey
.bg-grey-med
  background grey-med
.bg-dark-grey
  background grey-dark